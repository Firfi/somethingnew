<%= form_for @user, :url => signup_path, :html => { :class => "form-horizontal" } do |f| %>
    <%= render 'shared/error_messages', :target => @user %>
    <div class="control-group">
        <%= f.label :email, nil, :class => "control-label" %>
        <div class="controls">
            <%= f.text_field :email %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :username, nil, :class => "control-label" %>
        <div class="controls">
           <%= f.text_field :username %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :password, nil, :class => "control-label" %>
        <div class="controls">
            <%= f.password_field :password %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label :password_confirmation, nil, :class => "control-label" %>
        <div class="controls">
            <%= f.password_field :password_confirmation %>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <%= f.submit "Sign Up", :class => "btn" %>
        </div>
    </div>
<% end %>