<%= form_for @note do |f| %>
    <%= render 'shared/error_messages', :target => @note %>
    <div class="field">
        <%= f.label :content %>
        <%= f.text_area :content, :class => "new-note-content"%>
    </div>
    <div class="field">
        <%= f.label :tag_list, "Tags (separated by commas)" %>
        <%= f.text_field :tag_list %>
    </div>

    <div class="actions"><%= f.submit :class => "btn" %></div>
<% end %>